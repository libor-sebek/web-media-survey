<!DOCTYPE html>
<html lang='cs'>
    <head>
        <title>Web-media Survey</title>
        <meta charset="utf-8">

    </head>
    <body>
        {foreach $flashes as $flash}
            <div class="flash {$flash->type}">{$flash->message}</div>
        {/foreach}
        {foreach $surveys as $survey}
            {if isset($doneSurveyIds[$survey->id])}
                <div>
                    {$survey->question}
                    {foreach $survey->choices as $_choice}
                        <ul>
                            <li>{$_choice->choice} ({$_choice->count})</li>
                        </ul>
                    {/foreach}
                </div>
            {else}
                {control "surveyForm-$survey->id"}
            {/if}
        {/foreach}
    </body>
</html>